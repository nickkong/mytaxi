<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/line"
    android:paddingLeft="@dimen/line"
    android:paddingRight="@dimen/line"
    android:paddingTop="3dip">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/interval_AA"
        android:src="@mipmap/icon_arrow_up" />

    <ListView
        android:id="@+id/popupwindow_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3c4444"
        android:cacheColorHint="@null"
        android:divider="@color/TEXT_SUB"
        android:dividerHeight="@dimen/line"
        android:scrollbars="none" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/maintitle"
        android:background="@color/TEXT_MAIN">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/MAIN"
            android:textStyle="bold"
            android:textSize="@dimen/F3"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@id/btn_me"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@color/TRANSPARENT"
            android:layout_centerVertical="true"
            android:textSize="@dimen/F7"
            android:textColor="@color/white"
            android:text="我"/>

        <Button
            android:id="@id/btn_message"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@color/TRANSPARENT"
            android:layout_centerVertical="true"
            android:textSize="@dimen/F7"
            android:textColor="@color/TEXT_SUB"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/interval_E"
            android:text="消息"
            android:visibility="gone"/>

        <Button
            android:id="@id/btn_more"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/TRANSPARENT"
            android:layout_centerVertical="true"
            android:textSize="@dimen/F7"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="扫一扫"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:background="@color/TEXT_BG">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/TEXT_MAIN"
        android:layout_below="@id/titlebar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_huishou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挥手"
                android:textSize="@dimen/F9"
                android:textColor="@color/MAIN"
                android:background="@color/TRANSPARENT"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_yueche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约车"
                android:textSize="@dimen/F9"
                android:textColor="@color/white"
                android:background="@color/TRANSPARENT"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </LinearLayout>


    <com.zhtaxi.haodi.widget.CustomViewPager
        android:id="@+id/vp_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/TRANSPARENT"/>

    <ImageView
        android:id="@id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/welcome"
        android:visibility="gone"/>
</RelativeLayout>